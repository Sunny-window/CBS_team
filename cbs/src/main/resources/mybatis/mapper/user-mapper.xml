<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="con.gree.cbs.dao.UserDao">
 	 <select id="login" resultType="com.example.cbs.dto.UserDto">
  		SELECT id, pwd FROM members where id = #{param1} and pwd = #{param2}
  	 </select>
  	 <insert id="regist">
		INSERT into members (id, pwd) VALUES (#{param1} , #{pwd})
  	 </insert>
  	 <select id="idCheck" resultType="com.example.cbs.dto.UserDto">
  	 	SELECT id FROM members WHERE id = #{param1}
  	 </select>
  </mapper>